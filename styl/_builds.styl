.jenkins
  &_build
    &_line
      display : flex
      margin : 0.5em
      background-color : #525d668a
      padding-left  : 0.5em
      padding-right : 0.5em
      border-radius : 0.2em

    &_box
      margin : 0.5em
      border-radius : 0.4em
      text-align : center
      font-size : 1.2vmin
      padding : 0 0.5em
      box-shadow: 0 1px 0 rgba(0,0,0,0.2) inset

    &_time
      margin-left : auto

    &_name
      font-size : 2vmin
      display : flex
      align-items : center